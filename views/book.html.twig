{% extends 'base.html.twig' %}

{% block content %}

    <h3>"{{ book.getTitle }}"</h3>

    <h4>Author:
        {% for author in book.findAuthors %}
            {{ author.getName }}
        {% endfor %}</h4>
    <h4>Available copies: {{ copies_available|length }}</h4>
    {% if copies_available is not empty %}
        <form action="/book/{{ book.getId }}" method="post">
            <input type="hidden" name="_method" value="patch">
            <button type="submit" name="checkout_book">checkout</button>
        </form>
    {% endif %}
{% endblock %}
